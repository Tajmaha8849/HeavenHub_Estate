{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js", // Match all API files dynamically in the /api folder
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)", // All routes starting with /api
      "dest": "/api/$1"   // Dynamically resolve to matching file
    }
  ],
  "env": {
    "MONGO_URI": "@mongo_uri",      // Replace with your Vercel environment variable
    "JWT_SECRET": "@jwt_secret"    // Replace with your Vercel environment variable
  }
}
